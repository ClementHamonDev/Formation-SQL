CREATE TABLE Employes (

    id INT PRIMARY KEY,

    nom VARCHAR(50),

    prenom VARCHAR(50),

    fonction VARCHAR(50),

    salaire DECIMAL(10, 2),

    id_superieur INT,

    FOREIGN KEY (id_superieur) REFERENCES Employes(id)

);
 
CREATE TABLE Fournisseurs (

    id INT PRIMARY KEY,

    nom VARCHAR(100)

);
 
CREATE TABLE Categories (

    id INT PRIMARY KEY,

    nom VARCHAR(100)

);
 
CREATE TABLE Produits (

    id INT PRIMARY KEY,

    nom VARCHAR(100),

    id_fournisseur INT,

    id_categorie INT,

    quantite INT,

    FOREIGN KEY (id_fournisseur) REFERENCES Fournisseurs(id),

    FOREIGN KEY (id_categorie) REFERENCES Categories(id)

);
 
CREATE TABLE Clients (

    id INT PRIMARY KEY,

    nom VARCHAR(100),

    ville VARCHAR(100)

);
 
CREATE TABLE Commandes (

    id INT PRIMARY KEY,

    id_client INT,

    id_employe INT,

    FOREIGN KEY (id_client) REFERENCES Clients(id),

    FOREIGN KEY (id_employe) REFERENCES Employes(id)

);
 
CREATE TABLE Hierarchie (

    id_employe INT,

    id_superieur INT,

    PRIMARY KEY (id_employe, id_superieur),

    FOREIGN KEY (id_employe) REFERENCES Employes(id),

    FOREIGN KEY (id_superieur) REFERENCES Employes(id)

);

 
-- Création des tables
 
CREATE TABLE Employes (

    id INT PRIMARY KEY,

    nom VARCHAR(50),

    prenom VARCHAR(50),

    fonction VARCHAR(50),

    salaire DECIMAL(10, 2),

    id_superieur INT,

    FOREIGN KEY (id_superieur) REFERENCES Employes(id)

);
 
CREATE TABLE Fournisseurs (

    id INT PRIMARY KEY,

    nom VARCHAR(100)

);
 
CREATE TABLE Categories (

    id INT PRIMARY KEY,

    nom VARCHAR(100)

);
 
CREATE TABLE Produits (

    id INT PRIMARY KEY,

    nom VARCHAR(100),

    id_fournisseur INT,

    id_categorie INT,

    quantite INT,

    FOREIGN KEY (id_fournisseur) REFERENCES Fournisseurs(id),

    FOREIGN KEY (id_categorie) REFERENCES Categories(id)

);
 
CREATE TABLE Clients (

    id INT PRIMARY KEY,

    nom VARCHAR(100),

    ville VARCHAR(100)

);
 
CREATE TABLE Commandes (

    id INT PRIMARY KEY,

    id_client INT,

    id_employe INT,

    FOREIGN KEY (id_client) REFERENCES Clients(id),

    FOREIGN KEY (id_employe) REFERENCES Employes(id)

);
 
CREATE TABLE Hierarchie (

    id_employe INT,

    id_superieur INT,

    PRIMARY KEY (id_employe, id_superieur),

    FOREIGN KEY (id_employe) REFERENCES Employes(id),

    FOREIGN KEY (id_superieur) REFERENCES Employes(id)

);
 
